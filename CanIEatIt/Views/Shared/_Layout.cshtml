                            <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Index">Home</a>
                        </li> *@
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-hover="dropdown" asp-area="" asp-controller="Mushrooms" asp-action="Index">Mushrooms</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Mushrooms" asp-action="Database">Mushrooms Database</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Mushrooms" asp-action="Picking">Mushroom Picking Guide</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Mushrooms" asp-action="About">About Mushrooms</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-hover="dropdown" asp-area="" asp-controller="Plants" asp-action="Index">Plants</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Plants" asp-action="Database">Plants Database</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Plants" asp-action="Picking">Plant Picking Guide</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Plants" asp-action="About">About Plants</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <nav class="nav justify-content-center">
                <a class="nav-link" accesskeyasp-area="" asp-controller="Mushrooms" asp-action="Index">Mushrooms</a>
                <a class="nav-link" accesskeyasp-area="" asp-controller="Plants" asp-action="Index">Plants</a>
                <a class="nav-link" accesskeyasp-area="" asp-controller="Main" asp-action="About">About</a>
            </nav>
