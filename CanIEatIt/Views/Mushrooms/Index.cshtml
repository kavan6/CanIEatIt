<form asp-controller="Mushrooms" asp-action="Database" method="get">

    <div class="container">
        <div class="row mt-3 mb-3">

            <div class="col-lg-2"></div>

            <div class="col">
                <div class="row flex searchbar mt-3 mb-3">

                    <div class="col mt-0 nopadding" style="max-height: 2.225rem">
