                                        }
                                    }
                                </div>

                                <p class="card-text mb-1">
                                    <b> Family: </b>
                                    @Html.DisplayFor(modelItem => item.Family)
                                </p>
                                <p class="card-text mb-1">
                                    <b> Location: </b>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </p>
                                <p class="card-text mb-1">
